{
  "extends": "@amaxa/tsconfig/base.json",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "module": "esnext"
  },
  "include": [".", ".next/types/**/*.ts", "../website/src/app/_providers/providers.tsx"],
  "exclude": ["node_modules"]
}
