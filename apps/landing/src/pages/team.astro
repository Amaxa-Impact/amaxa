---
import { AnimatedTitle } from "@/components/custom-animations/animated-title";
import AppLayout from "@/layouts/app-layout.astro";

const seo = {
  title: "Meet Our Team",
  description:
    "Meet the passionate people behind ámaxa who work every day to help changemakers turn ideas into impact.",
};

interface TeamMember {
  id: string;
  name: string;
  role: string;
  image: string;
  category: "executive" | "employee" | "coach" | "intern";
  excerpt?: string;
}

const placeholderImage =
  "https://b47pkz22xs.ufs.sh/f/OxFTTzjZGToOQI4SoEOsmkEelahd1WSuvzRG6jICN9HqcOF3";

const executives: TeamMember[] = [
  {
    id: "ceo",
    name: "Lauren McMillen",
    role: "Chief Executive Officer",
    image: placeholderImage,
    category: "executive",
    excerpt: "I believe everyone has the power to make a difference.",
  },
  {
    id: "cto",
    name: "Ani Chenjeri",
    role: "Chief Technology Officer",
    image: placeholderImage,
    category: "executive",
    excerpt: "Technology should empower communities, not complicate them.",
  },
  {
    id: "coo",
    name: "TBD",
    role: "Chief Operating Officer",
    image: placeholderImage,
    category: "executive",
    excerpt:
      "Operations is about creating systems that let people focus on impact.",
  },
];

const employees: TeamMember[] = [
  {
    id: "emp-1",
    name: "Team Member",
    role: "Program Manager",
    image: placeholderImage,
    category: "employee",
  },
  {
    id: "emp-2",
    name: "Team Member",
    role: "Community Lead",
    image: placeholderImage,
    category: "employee",
  },
];

const allMembers: TeamMember[] = [...executives, ...employees];

const categoryLabels: Record<string, string> = {
  executive: "Leadership",
  employee: "Team",
  coach: "Coach",
  intern: "Intern",
};
---

<AppLayout
  seo={{
    title: seo.title,
    description: seo.description,
    image:
      "https://b47pkz22xs.ufs.sh/f/OxFTTzjZGToOexh9L5yvrS3NH5LD0fGBOXwFydpiVbYzJMa1",
    type: "website",
    canonicalURL: "https://www.amaxaimpact.org/team",
    keywords: ["amaxa", "team", "leadership", "coaches", "staff"],
    noIndex: false,
  }}
>
  <main class="min-h-screen bg-neutral-50">
    <!-- Hero -->
    <section class="px-6 py-20 text-center md:py-28">
      <div class="mx-auto flex max-w-2xl flex-col gap-10">
        <AnimatedTitle
          beforeText="Meet"
          underlinedText="Our Team"
          color="#BCD96C"
          client:load
        />
        <p class="mt-6 text-lg leading-relaxed text-neutral-500">
          The passionate people behind Ámaxa who work every day to help
          changemakers turn ideas into impact.
        </p>
      </div>
    </section>

    <!-- Team Grid -->
    <section class="mx-auto max-w-6xl px-6 pb-20">
      <div class="grid grid-cols-3 gap-6 lg:gap-8">
        {
          allMembers.map((member) => (
            <article class="group">
              {/* Image */}
              <div
                class:list={[
                  "relative aspect-square overflow-hidden rounded-xl bg-linear-to-br from-neutral-200 to-neutral-100 shadow-sm transition-all duration-300 group-hover:-translate-y-1 group-hover:shadow-lg",
                  member.category === "executive" &&
                    "ring-[3px] ring-[#BCD96C]",
                ]}
              >
                <img
                  src={member.image}
                  alt={member.name}
                  loading="lazy"
                  class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
                />

                {member.excerpt && (
                  <div class="absolute inset-0 flex items-end bg-linear-to-t from-black/80 via-black/40 to-transparent p-3 opacity-0 transition-opacity duration-300 group-hover:opacity-100">
                    <p class="line-clamp-4 text-xs leading-relaxed text-white italic">
                      "{member.excerpt}"
                    </p>
                  </div>
                )}
              </div>

              <div class="mt-3 text-center">
                <h3
                  class:list={[
                    "text-sm font-semibold",
                    member.category === "executive"
                      ? "text-[#8FB33A]"
                      : "text-neutral-800",
                  ]}
                >
                  {member.name}
                </h3>
                <p class="mt-0.5 text-xs text-neutral-500">{member.role}</p>
                {member.category !== "executive" && (
                  <span class="mt-1.5 inline-block rounded bg-neutral-200 px-2 py-0.5 text-[10px] font-medium tracking-wide text-neutral-500 uppercase">
                    {categoryLabels[member.category]}
                  </span>
                )}
              </div>
            </article>
          ))
        }
      </div>
    </section>

    <section
      class="bg-linear-to-br from-[#BCD96C]/15 to-[#BCD96C]/5 px-6 py-20 text-center"
    >
      <h2 class="text-2xl font-semibold text-neutral-800 md:text-3xl">
        Want to join our team?
      </h2>
      <p class="mt-3 text-neutral-600">
        We're always looking for passionate people who want to make a
        difference.
      </p>
      <a
        href="/careers"
        class="mt-6 inline-flex items-center justify-center rounded-full border-2 border-neutral-800 bg-[#BCD96C] px-8 py-3 font-semibold text-neutral-800 shadow-md transition-all hover:-translate-y-0.5 hover:bg-[#a8c55f] hover:shadow-lg"
      >
        View Open Positions
      </a>
    </section>
  </main>
</AppLayout>
