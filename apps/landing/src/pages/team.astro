<AppLayout>
  <main>
    <!-- Hero Section -->
    <section class="w-full bg-white px-6 py-16 md:py-24">
      <div class="container mx-auto max-w-7xl px-6 md:px-16 lg:px-20">
        <div
          class="flex flex-col items-center justify-center gap-12 text-center"
        >
          <AnimatedTitle
            beforeText="Meet"
            underlinedText="Our Team"
            color="#BCD96C"
            client:load
          />
          <p class="max-w-2xl text-lg text-neutral-600 md:text-xl">
            The passionate people behind Ámaxa who work every day to help
            changemakers turn ideas into impact.
          </p>
        </div>
      </div>
    </section>

    <!-- Executives Section -->
    <section class="w-full bg-neutral-50 px-6 py-16 md:py-24">
      <div class="container mx-auto max-w-7xl px-6 md:px-16 lg:px-20">
        <h2 class="mb-12 text-2xl font-medium text-[#3B3B3B] md:text-3xl">
          Leadership
        </h2>

        <div class="grid grid-cols-1 gap-8 md:grid-cols-3 md:gap-12">
          {
            executives.map((exec) => (
              <article class="group">
                {/* Image */}
                <div class="relative mb-6 aspect-[3/4] overflow-hidden rounded-2xl bg-neutral-200">
                  <img
                    src={exec.image}
                    alt={exec.name}
                    loading="lazy"
                    class="h-full w-full object-cover transition-transform duration-500 group-hover:scale-105"
                  />
                </div>

                {/* Info */}
                <div class="space-y-3">
                  <div>
                    <h3 class="text-xl font-medium text-[#3B3B3B] md:text-2xl">
                      {exec.name}
                    </h3>
                    <p class="text-sm font-medium tracking-wide text-[#BCD96C] uppercase">
                      {exec.role}
                    </p>
                  </div>
                  <p class="text-base leading-relaxed text-neutral-600 italic">
                    "{exec.excerpt}"
                  </p>
                </div>
              </article>
            ))
          }
        </div>
      </div>
    </section>

    <!-- Employees Section -->
    {
      employees.length > 0 && (
        <section class="w-full bg-white px-6 py-16 md:py-24">
          <div class="container mx-auto max-w-7xl px-6 md:px-16 lg:px-20">
            <h2 class="mb-12 text-2xl font-medium text-[#3B3B3B] md:text-3xl">
              Our Team
            </h2>

            <div class="grid grid-cols-2 gap-6 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-5 lg:gap-8">
              {employees.map((member) => (
                <article class="group text-center">
                  {/* Image */}
                  <div class="relative mx-auto mb-4 aspect-square w-full max-w-[180px] overflow-hidden rounded-xl bg-neutral-200">
                    <img
                      src={member.image}
                      alt={member.name}
                      loading="lazy"
                      class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
                    />
                  </div>

                  {/* Info */}
                  <h3 class="text-base font-medium text-[#3B3B3B]">
                    {member.name}
                  </h3>
                  <p class="text-sm text-neutral-500">{member.role}</p>
                </article>
              ))}
            </div>
          </div>
        </section>
      )
    }

    <!-- Coaches Section -->
    {
      coaches.length > 0 && (
        <section class="w-full bg-neutral-50 px-6 py-16 md:py-24">
          <div class="container mx-auto max-w-7xl px-6 md:px-16 lg:px-20">
            <h2 class="mb-12 text-2xl font-medium text-[#3B3B3B] md:text-3xl">
              Coaches
            </h2>
            <p class="mb-8 max-w-2xl text-lg text-neutral-600">
              Our coaches guide teams through the project journey, providing
              mentorship and support every step of the way.
            </p>

            <div class="grid grid-cols-2 gap-6 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 lg:gap-8">
              {coaches.map((coach) => (
                <article class="group text-center">
                  {/* Image */}
                  <div class="relative mx-auto mb-4 aspect-square w-full max-w-[140px] overflow-hidden rounded-xl bg-neutral-200">
                    <img
                      src={coach.image}
                      alt={coach.name}
                      loading="lazy"
                      class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
                    />
                  </div>

                  {/* Info */}
                  <h3 class="text-sm font-medium text-[#3B3B3B]">
                    {coach.name}
                  </h3>
                  <p class="text-xs text-neutral-500">{coach.role}</p>
                </article>
              ))}
            </div>
          </div>
        </section>
      )
    }

    <!-- Interns Section -->
    {
      interns.length > 0 && (
        <section class="w-full bg-white px-6 py-16 md:py-24">
          <div class="container mx-auto max-w-7xl px-6 md:px-16 lg:px-20">
            <h2 class="mb-12 text-2xl font-medium text-[#3B3B3B] md:text-3xl">
              Interns
            </h2>
            <p class="mb-8 max-w-2xl text-lg text-neutral-600">
              Our interns bring fresh perspectives and energy to everything we
              do.
            </p>

            <div class="grid grid-cols-2 gap-6 sm:grid-cols-3 md:grid-cols-4 lg:grid-cols-6 lg:gap-8">
              {interns.map((intern) => (
                <article class="group text-center">
                  {/* Image */}
                  <div class="relative mx-auto mb-4 aspect-square w-full max-w-[140px] overflow-hidden rounded-xl bg-neutral-200">
                    <img
                      src={intern.image}
                      alt={intern.name}
                      loading="lazy"
                      class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105"
                    />
                  </div>

                  {/* Info */}
                  <h3 class="text-sm font-medium text-[#3B3B3B]">
                    {intern.name}
                  </h3>
                  <p class="text-xs text-neutral-500">{intern.role}</p>
                </article>
              ))}
            </div>
          </div>
        </section>
      )
    }

    <!-- CTA Section -->
    <section class="w-full bg-[#BCD96C]/10 px-6 py-16 md:py-24">
      <div
        class="container mx-auto max-w-7xl px-6 text-center md:px-16 lg:px-20"
      >
        <h2
          class="mb-6 text-2xl font-medium text-[#3B3B3B] md:text-3xl lg:text-4xl"
        >
          Want to join our team?
        </h2>
        <p class="mb-8 text-lg text-neutral-600">
          We're always looking for passionate people who want to make a
          difference.
        </p>
        <a
          href="/careers"
          class="inline-flex items-center justify-center rounded-full border border-[#3B3B3B] bg-[#BCD96C] px-8 py-3 text-base font-medium text-[#3B3B3B] transition-colors hover:bg-[#a8c55f]"
        >
          View Open Positions
        </a>
      </div>
    </section>
  </main>
</AppLayout>
