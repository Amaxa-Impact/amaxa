---
/**
 * Projects Listing - All projects page
 *
 * Shows all projects using FocusCards component.
 * Each card shows project image, title, and category.
 */

import { AnimatedTitle } from "@/components/custom-animations/animated-title";
import { FocusCards } from "@/components/custom-animations/focus-cards";
import AppLayout from "@/layouts/app-layout.astro";
import { projectCards } from "@/lib/project-cards";

const seoTitle = "Our Projects";
const seoDescription =
  "Explore ámaxa's high-impact projects. We partner with innovative nonprofits in Palestine, Liberia, and Uganda, and create our own initiatives for mental health, feminism, and LGBTQ+ representation.";
---

<AppLayout
  seo={{
    title: seoTitle,
    description: seoDescription,
    image: "https://b47pkz22xs.ufs.sh/f/OxFTTzjZGToOexh9L5yvrS3NH5LD0fGBOXwFydpiVbYzJMa1",
    type: "website",
    canonicalURL: "https://www.amaxaimpact.org/project",
    keywords: ["amaxa", "projects", "nonprofits", "Palestine", "Liberia", "Uganda"],
    noIndex: false,
  }}
>
  <main>
    <section class="bg-background w-full px-6 pt-16 md:pt-24">
      <div class="container mx-auto max-w-7xl px-6 md:px-16 lg:px-20">
        <div class="flex flex-col items-center overflow-visible">
          <div class="mb-12 w-full">
            <AnimatedTitle
              beforeText="Discover"
              className="text-3xl sm:text-4xl md:text-5xl lg:text-6xl"
              underlinedText="Our Projects"
              color="#BCD96C"
              client:load
            />
          </div>
        </div>
      </div>
    </section>

    <section class="container mx-auto px-6 py-5 md:px-16 lg:px-20">
      <div class="mx-auto max-w-7xl text-center">
        <div class="flex flex-col items-center gap-5 text-center md:gap-10">
          <div class="mx-auto flex max-w-3xl flex-col gap-4 text-center">
            <h2 class="text-foreground text-3xl font-normal md:text-4xl">
              Our projects are high-impact, innovative, and community-driven.
            </h2>
            <p class="text-foreground mb-6 text-lg">
              We have partnered with nonprofits in Palestine, Liberia, and
              Uganda whose community-founded solutions are innovative in their
              fields, such as ISNAD Community Center's approach to
              community-based learning, first in its area, and Nyaka School's
              holistic approach to supporting AIDS-affected communities.
            </p>
          </div>
          <FocusCards client:visible cards={projectCards} />
        </div>
      </div>
    </section>

    <section class="bg-accent w-full py-16 md:py-24 lg:py-32">
      <div class="mx-auto max-w-4xl px-6 md:px-16 lg:px-20">
        <div class="mb-12 text-center">
          <h2
            class="text-foreground text-3xl leading-tight font-normal md:text-4xl lg:text-5xl"
          >
            Join us to transform your passion into impact.
          </h2>
        </div>

        <div class="text-center">
          <a
            href="https://airtable.com/appPR9mkslbn3U8YZ/shrHHUtRzK4DqKt3F"
            class="inline-flex items-center justify-center rounded-full border border-[#3B3B3B] bg-[#BCD96C] px-6 py-3 text-sm font-light text-[#3B3B3B] transition-colors hover:bg-[#a8c55f] md:text-base"
          >
            Apply Today →
          </a>
        </div>
      </div>
    </section>
  </main>
</AppLayout>;
