---
/**
 * Careers Page - Open positions at Ámaxa
 *
 * Job postings are managed through Sanity CMS.
 *
 * To add job postings in Sanity:
 * 1. Create a new document type called "jobPosting" with these fields:
 *    - title (string)
 *    - slug (slug)
 *    - department (string) - e.g., "Engineering", "Operations", "Programs"
 *    - location (string) - e.g., "Remote", "Denver, CO"
 *    - type (string) - e.g., "Full-time", "Part-time", "Internship"
 *    - description (portable text/block content)
 *    - requirements (array of strings)
 *    - isActive (boolean)
 *    - publishedAt (datetime)
 *
 * 2. Create job postings in your Sanity Studio
 * 3. They will automatically appear on this page
 */

import { AnimatedTitle } from "@/components/custom-animations/animated-title";
import AppLayout from "@/layouts/app-layout.astro";
import { sanityFetch } from "@/lib/sanity";
import { Briefcase, MapPin, Clock } from "lucide-react";

// Type for job posting from Sanity
interface JobPosting {
  _id: string;
  title: string;
  slug: { current: string };
  department: string;
  location: string;
  type: string;
  description: any; // Portable text
  requirements?: string[];
  publishedAt: string;
}

// Fetch active job postings from Sanity
// If the jobPosting type doesn't exist yet, this will return an empty array
let jobs: JobPosting[] = [];

try {
  jobs = await sanityFetch<JobPosting[]>({
    query: `*[_type == "jobPosting" && isActive == true] | order(publishedAt desc) {
      _id,
      title,
      slug,
      department,
      location,
      type,
      description,
      requirements,
      publishedAt
    }`,
  });
} catch (error) {
  // If the query fails (e.g., type doesn't exist yet), use empty array
  jobs = [];
}

// Helper to extract plain text from portable text for preview
function extractPlainText(body: any, maxLength = 200): string {
  if (!body || !Array.isArray(body)) return "";

  const text = body
    .filter((block: any) => block._type === "block")
    .map(
      (block: any) =>
        block.children
          ?.filter((child: any) => child._type === "span")
          .map((span: any) => span.text)
          .join("") || "",
    )
    .join(" ")
    .trim();

  if (text.length <= maxLength) return text;
  return text.slice(0, maxLength).trim() + "...";
}

// Group jobs by department
const jobsByDepartment = jobs.reduce<Record<string, JobPosting[]>>((acc, job) => {
  const dept = job.department || "General";
  if (!acc[dept]) {
    acc[dept] = [];
  }
  acc[dept].push(job);
  return acc;
}, {});

const departments = Object.keys(jobsByDepartment).sort();
