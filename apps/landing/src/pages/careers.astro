                        <div class="space-y-2">
                          <h4 class="text-xl font-medium text-[#3B3B3B] transition-colors group-hover:text-black">
                            {job.title}
                          </h4>
                          <div class="flex flex-wrap items-center gap-4 text-sm text-neutral-500">
                            <span class="flex items-center gap-1.5">
                              <MapPin className="h-4 w-4" />
                              {job.location}
                            </span>
                            <span class="flex items-center gap-1.5">
                              <Clock className="h-4 w-4" />
                              {job.type}
                            </span>
                          </div>
                          {job.description && (
                            <p class="mt-2 text-neutral-600 line-clamp-2">
                              {extractPlainText(job.description, 150)}
                            </p>
                          )}
                        </div>
                        <div class="shrink-0">
                          <span class="inline-flex items-center gap-2 text-sm font-medium text-[#3B3B3B] transition-colors group-hover:text-[#BCD96C]">
                            View Details
