---
import type { SpotlightData } from "@/lib/projects";

interface Props {
  spotlightData: SpotlightData;
}
const { spotlightData } = Astro.props;
---

<section class="container mx-auto flex flex-col py-10 md:flex-row">
  <!-- Left Section -->
  <div class="flex flex-col gap-5 p-4 md:w-2/4 lg:w-3/4">
    <h2 class="mb-2 text-sm font-bold text-gray-500 uppercase">
      {spotlightData.heading}
    </h2>

    <div>
      <div class="flex flex-col gap-0">
        <h1 class="mb-1 text-4xl font-semibold">{spotlightData.name}</h1>
        {
          spotlightData.ageLocation ? (
            <p class="mb-4 text-sm text-gray-600">
              {spotlightData.ageLocation}
            </p>
          ) : null
        }
      </div>

      {
        spotlightData.paragraphs.map((p, i) => (
          <p key={i} class="mb-4 text-gray-700">
            {p}
          </p>
        ))
      }

      {
        spotlightData.teammates ? (
          <p class="mt-4 font-semibold text-gray-700">
            {spotlightData.teammates}
          </p>
        ) : null
      }
    </div>
  </div>

  <!-- Right Section -->
  <div class="flex w-full items-center justify-center">
    <div class="relative h-full w-full">
      {
        spotlightData.videoUrl ? (
          <iframe
            src={spotlightData.videoUrl}
            class="relative h-full w-full"
            allow="autoplay; fullscreen; picture-in-picture; clipboard-write; encrypted-media"
            allowfullscreen
          />
        ) : spotlightData.imageUrl ? (
          <img
            src={spotlightData.imageUrl}
            width="500"
            height="500"
            alt={spotlightData.name}
            class="mx-24 flex h-[700px] w-[500px] flex-col items-center justify-center rounded-lg object-cover shadow-md"
          />
        ) : (
          <div class="flex h-64 w-full items-center justify-center rounded-lg bg-gray-200 text-gray-500">
            No media available
          </div>
        )
      }
    </div>
  </div>
</section>
